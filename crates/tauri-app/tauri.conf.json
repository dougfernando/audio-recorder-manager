{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Audio Recorder Manager",
  "version": "0.7.0",
  "identifier": "com.audiorecordermanager.app",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "ui/dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "webviewInstallMode": {
        "type": "skip"
      }
    }
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Audio Recorder Manager",
        "width": 1320,
        "height": 900,
        "minWidth": 900,
        "minHeight": 650,
        "visible": true,
        "center": true,
        "decorations": true,
        "transparent": false,
        "backgroundColor": "#F5F5F7",
        "additionalBrowserArgs": "--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection --disable-extensions --disable-component-update --disable-background-networking --disable-sync --disable-translate --disable-background-timer-throttling --no-first-run --no-default-browser-check"
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; media-src 'self' asset: http://asset.localhost",
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:default",
            "shell:default"
          ]
        }
      ]
    },
    "withGlobalTauri": true
  }
}
