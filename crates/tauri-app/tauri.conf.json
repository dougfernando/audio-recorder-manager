{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Audio Recorder Manager",
  "version": "0.7.0",
  "identifier": "com.audiorecordermanager.app",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "ui/dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Audio Recorder Manager",
        "width": 1100,
        "height": 750,
        "minWidth": 900,
        "minHeight": 650,
        "visible": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "backgroundColor": "#F5F5F7"
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'",
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:default",
            "shell:default"
          ]
        }
      ]
    },
    "withGlobalTauri": true
  }
}
